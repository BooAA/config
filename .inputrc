# Configuration for GNU readline

# Variable Settings
set bell-style none
set blink-matching-paren on
set colored-completion-prefix on
set completion-ignore-case on
set completion-map-case on
set completion-query-items 500
set editing-mode emacs
set keymap emacs
set keyseq-timeout 200
set mark-directories on
set mark-symlinked-directories on
set match-hidden-files on
set show-all-if-unmodified on
set skip-completed-text on

# Key Bindings
"\C- ": set-mark
"\C-xf": dump-functions
"\C-xk": kill-whole-line
"\C-xm": dump-macros
"\C-xp": print-last-kbd-macro
"\C-xu": universal-argument
"\C-xv": dump-variables
"\e ": delete-horizontal-space
"\e;": insert-comment
"\e\C-\b": shell-backward-kill-word
"\e\C-k": shell-kill-word
"\en": history-substring-search-forward
"\ep": history-substring-search-backward
