!file ~/.Xmodmap

! Make alt key just meta
keycode 64 = Meta_L
keycode 108 = Meta_R

! F17 to Hyper
keycode 195 = Hyper_R

! F18 to Alt
keycode 196 = Alt_R

clear lock
clear control
clear mod1
clear mod2
clear mod3
clear mod4

add control = Control_L Control_R
add mod1 = Meta_L Meta_R
add mod2 = Alt_L Alt_R
add mod3 = Hyper_L Hyper_R
add mod4 = Super_L Super_R
